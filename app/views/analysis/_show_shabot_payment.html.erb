<h2>支払予定</h2>
<h4>＊: 実績</h4>
<table class="table ui">
  <colgroup>
    <col style="width: 20px">
  </colgroup>
  <thead>
    <tr>
      <th></th>
      <th>支払日</th>
      <th>取引先</th>
      <th class="right aligned">金額（円）</th>
      <th>摘要</th>
    </tr>
  </thead>
  <tbody>
    <% @shabot_payments.each do |payment| %>
      <tr>
        <td><%= '＊' unless payment.planned %></td>
        <td><%= payment.payment_date.strftime('%Y/%m/%d') %></td>
        <td><%= payment.payment_to['name'] %></td>
        <td class="right aligned"><%= payment.total_amount&.to_s(:delimited) %></td>
        <td><%= truncate(payment.comment, length: 50, omission: '…') %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr class="warning">
      <td></td>
      <td></td>
      <td class="right aligned">合計</td>
      <td class="right aligned"><%= @shabot_payments.map(&:total_amount).compact.sum&.to_s(:delimited) %></td>
      <td></td>
    </tr>
  </tfoot>
</table>
